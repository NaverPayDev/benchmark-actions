{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "ES2015",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "allowJs": true,
        "incremental": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2016", "dom"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "exclude": ["dist"]
}
